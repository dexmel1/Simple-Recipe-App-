<maui:MauiWinUIApplication
    x:Class="DexDiner.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:DexDiner.WinUI">
    <maui:MauiWinUIApplication.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="LightBlue"/>
            <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointedOver" Color="LightBlue"/>
        </ResourceDictionary>
    </maui:MauiWinUIApplication.Resources>

</maui:MauiWinUIApplication>

